
public class OperatorsMath {
	public static void main(String[] args) {
		double num1 = 5.4d;
		double num2 = 0.3d;
		double result;
		char add ='+';
		char subtract = '-';
		char multiply ='*';
		char divide ='/';
		result = num1 + num2;
		result = num1 - num2;
		result = num1 * num2;
		result = num1 / num2;
		//pedinas ir tapec, lai butu smukak - atstarpe
		System.out.println(num1 + " "+add+" "+num2+" = "+result);
		
		System.out.println(num1 + " "+subtract+" "+num2+" = "+result);
		
		System.out.println(num1 + " "+multiply+" "+num2+" = "+result);
		
		System.out.println(num1 + " "+divide+" "+num2+" = "+result);

	}

}
